%{
    int num_lines = 0, num_chars = 0;
%}

/* fa sì che lo scanner non chiami la funzione yywrap() su un end-of-file, ovvero assume che non ci siano altri file da analizzare con lo scanner. L'opzione
 main implica questa. */
%option noyywrap 

%%
\n      ++num_lines; ++num_chars;
.       ++num_chars;

%%
int main()
        {
        yylex();
        printf( "# of lines = %d, # of chars = %d\n",
                num_lines, num_chars );
        }

