/*Restituisca il più Piccolo dei Numeri Naturali Presenti nel Testo*/

%{
	int min=0, num, c=0;
%}

%option noyywrap

%%

0|[1-9][0-9]* {
	num=atoi(yytext);
	if(c==0){
	min=num;
	c=1;
	}
	else{
	if(num<min){
	min=num;
	}}
}

%%

int main(){
	yylex();
	printf("Il minimo e' : %d\n", min);
}


